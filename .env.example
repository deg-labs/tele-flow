# -----------------------------------------------------------------------------
# 基本設定 (APIキーなど)
# -----------------------------------------------------------------------------

# Telegram API 認証情報 (https://my.telegram.org から取得)
API_ID=
API_HASH=

# Telethonのセッション名
SESSION_NAME=my_session

# 対象となるチャンネルのユーザー名
CHANNEL_USERNAME=hyperliquidliqs

# Discord WebhookのURL
DISCORD_WEBHOOK_URL=


# -----------------------------------------------------------------------------
# L0: イベント収集に関する設定
# -----------------------------------------------------------------------------

# 起動時に履歴を読み込む過去のメッセージ数
MESSAGE_HISTORY_LIMIT=100


# -----------------------------------------------------------------------------
# L1: 基本流速検知 (通知の基本トリガー) に関する設定
# -----------------------------------------------------------------------------

# Botが「ACTIVE」状態に遷移する基準となる流速の閾値 (USD/秒)
BASE_THRESHOLD_USD_PER_SEC=5000

# 流速や各種分析の対象となる時間窓 (秒単位)。5分間を推奨 (=300秒)
ANALYSIS_WINDOW_SECONDS=30

# 流速チェックを行う間隔 (秒単位)。この間隔でL1の計算が実行されます。
MONITORING_INTERVAL_SECONDS=10


# -----------------------------------------------------------------------------
# L2: 状況解析 (通知内容の分析) に関する設定
# -----------------------------------------------------------------------------

# 加速度の閾値: 現在の流速が前回の流速の何倍になったら「CRITICAL」と判断するか。
ACCELERATION_THRESHOLD=3.0

# ドミナンスの閾値: 特定銘柄の清算額が全体の何割(0-1)を超えたら「集中」と判断するか。
DOMINANCE_THRESHOLD=0.75

# バイアスの閾値: ロング(またはショート)の清算額が全体の何割(0-1)を超えたら「偏り」と判断するか。
BIAS_THRESHOLD=0.85


# -----------------------------------------------------------------------------
# L3: 通知制御・集約に関する設定
# -----------------------------------------------------------------------------

# サマリー通知後、次のサマリー通知を送信するまでのクールダウン期間 (秒単位)。
SUMMARY_COOLDOWN_SECONDS=60

# 流速が閾値を下回ってから、Botが「IDLE」状態に戻るまでの猶予期間 (秒単位)。
ACTIVE_IDLE_TRANSITION_GRACE_PERIOD_SECONDS=30

# -----------------------------------------------------------------------------
# L4: 単発巨額イベント通知
# -----------------------------------------------------------------------------

# 1件の清算がこの金額(USD)以上なら即時通知 (0で無効)
SINGLE_EVENT_NOTIFICATION_THRESHOLD=5000000
